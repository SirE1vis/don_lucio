---
const faviconVersion = new Date().getTime(); 
import { ClientRouter } from "astro:transitions";
import "aos/dist/aos.css";
import "../styles/global.css";
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import WhatsAppIcon from "@/components/icons/WhatsApp.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="prueba" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href={`/favicon.ico?v=${faviconVersion}`} />
    <link rel="icon" type="image/png"  href={`/favicon.png?v=${faviconVersion}`} />
    <meta name="robots" content="nofollow, noindex" />
    <title>Don Sa Saa | {title}</title>
    <ClientRouter />

    <link
      rel="preload"
      href="/fonts/rocket.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <slot name="preload" />
  </head>

  <body>
    <Navbar />
    <main class="header-spacing pt-[2px]">
      <slot />
      <a
        href="https://wa.me/944765755"
        target="_blank"
        rel="noopener noreferrer"
        class="fixed bottom-6 right-6 z-50 flex items-center justify-center w-16 h-16 bg-[#25D366] rounded-full shadow-lg hover:scale-105 transition-transform duration-300 animate-border"
      >
        <WhatsAppIcon class="w-9 h-9 text-white" />
      </a>
    </main>
    <Footer />

    <style is:global>
      :root {
        --header-height: 90px;
      }

      @media (min-width: 768px) {
        :root {
        	--header-height: 95px;
        }
      }

      @media (min-width: 1024px) {
        :root {
          --header-height: 115px;
        }
      }

      .header-height {
        height: var(--header-height);
      }

	  .header-spacing {

        margin-top: var(--header-height);

      }

      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
      }

      @font-face {
        font-family: "rocket";
        src:
          url("/fonts/rocket.woff2") format("woff2"),
          url("/fonts/rocket.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
          U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193,
          U+2212, U+2215, U+FEFF;
      }

      @font-face {
        font-family: "poppins";
        src:
          url("/fonts/poppins.woff2") format("woff2"),
          url("/fonts/poppins.woff") format("woff");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6,
          U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193,
          U+2212, U+2215, U+FEFF;
      }

      html,
        body {
          width: 100%;
          max-width: 100vw;
          overflow-x: hidden;
          font-family: "poppins", system-ui, sans-serif;
        }

      h1,
      h2,
      h3 {
        font-family: "rocket", system-ui, sans-serif !important;
        font-weight: 400;
      }

      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: transparent;
        backdrop-filter: blur(10px);
        border-radius: 5px;
      }

      ::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0);
        backdrop-filter: blur(10px);
        border-radius: 5px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: rgb(66, 62, 62);
      }

      .text__glowing {
        transition: text-shadow 0.3s ease;
      }

      .text__glowing:hover {
        text-shadow: 1px 1px 20px #fff;
      }

      @keyframes blur {
        to {
          box-shadow:
            0px 5px 50px -5px rgba(0, 0, 0, 0.1),
            0px 0px 0 1px rgba(0, 0, 0, 0.3);
          background: rgba(0, 0, 0, 0.3);
          backdrop-filter: blur(10px);
        }
      }

      @keyframes border-blink {
        0% {
          box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.8);
        }
        70% {
          box-shadow: 0 0 0 20px rgba(37, 211, 102, 0);
        }
        100% {
          box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
        }
      }

      .animate-border {
        animation: border-blink 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
          infinite;
      }
    </style>
    <script>
      import AOS from "aos";

      document.addEventListener("astro:page-load", () => {
        AOS.init({
          duration: 700,
          once: false,
          offset: 200,
          easing: "ease-in-out",
        });
      });
    </script>
  </body>
</html>
