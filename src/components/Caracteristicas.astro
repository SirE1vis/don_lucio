---
import CalidadIcon from '@/components/icons/Calidad.astro'
import SaborIcon from '@/components/icons/Sabor.astro'
import VariedadIcon from '@/components/icons/Variedad.astro'
import SaludableIcon from '@/components/icons/Saludable.astro'

const features = [
  {
    title: "Sabor Tradicional",
    description:"Más de 25 años preservando el auténtico sabor del queso artesanal.",
    Icon: SaborIcon,
    color: "text-white"
  },
  {
    title: "Calidad Premium",
    description:"Selección de los mejores ingredientes y control riguroso en cada proceso.",
    Icon: CalidadIcon,
    color: "text-white"
  },
  {
    title: "Variedad de Productos",
    description: "Amplia gama de productos para satisfacer todos los gustos.",
    Icon: VariedadIcon,
    color: "text-white"
  },
  {
    title: "Nutritivo y Saludable",
    description:"Productos nutritivos y saludables para su bienestar y confort.",
    Icon: SaludableIcon,
    color: "text-white"
  },
];

const mainImage = {
  webp: `${import.meta.env.BASE_URL}/images/caracteristicas-main.webp`,
  png: `${import.meta.env.BASE_URL}/images/caracteristicas-main.png`,
  alt: "img-carcteristicas",
};
---

<section class="relative w-full">
  <div class="max-w-[100dvw] overflow-x-clip">
    <div class="container mx-auto px-4">
      {/* Main grid container for image and content */}
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
        {/* Left side - Image */}
        <div class="block">
          <picture class="block w-full aspect-auto">
            <source srcset={mainImage.webp} type="image/webp" />
            <img 
              src={mainImage.png} 
              alt={mainImage.alt}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </picture>
        </div>

        {/* Right side - Features */}
        <div class="space-y-8">
          <div class="text-center lg:text-left mb-8">
            <h2 class="text-3xl md:text-4xl font-bold text-amber-900 mb-4">
              ¿Por qué elegirnos?
            </h2>
            <p class="text-gray-600 md:text-lg">
              Nuestro compromiso con la calidad y la tradición
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6">
            {
              features.map(({ title, description, Icon }) => (
                <div class="bg-white rounded-xl shadow-lg p-4 sm:p-6 flex flex-col items-center text-center">
                  <div class="text-amber-900 mb-4">
                    <Icon class="w-10 h-10 sm:w-12 sm:h-12" />
                  </div>
                  <h3 class="text-xl font-bold text-amber-900 mb-2">{title}</h3>
                  <p class="text-gray-600 text-sm sm:text-base">{description}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
