---
import IconCalidad from "@/components/icons/Calidad.astro";
import IconSaborTradicional from "@/components/icons/SaborTradicional.astro";
import TradicionFamiliar from "./icons/TradicionFamiliar.astro";

const cardsData = [
  {
    id: "01",
    title: "Sabor Tradicional",
    description: '<span class="text-amber-400 font-rocket">"DON"</span> representa el respeto hacia el patriarca quesero, el maestro artesano que inició nuestra tradición familiar hace décadas.',
    footer: "Tradición desde 1995",
    iconComponent: IconSaborTradicional,
    animation: "fade-right",
    delay: 200
  },
  {
    id: "02",
    title: "Calidad Garantizada",
    description: '<span class="text-amber-400 font-rocket">"SA SAA"</span> evoca la excelencia y distinción, posicionando nuestros productos como sinónimo de calidad premium y confianza.',
    footer: "Certificación ISO 9001",
    iconComponent: IconCalidad,
    animation: "fade-up",
    delay: 400
  },
  {
    id: "03",
    title: "Compromiso",
    description: 'Nuestra marca refleja el compromiso de mantener los <span class="text-amber-400 font-rocket">valores familiares</span> en cada proceso, desde la granja hasta tu mesa.',
    footer: "100% Natural",
    iconComponent: TradicionFamiliar,
    animation: "fade-left",
    delay: 600
  }
];
---

<section class="w-full mt-10 mb-4 md:mb-7 md:pt-24">
  <div class="w-full px-4">
    <div class="container mx-auto text-center mb-8">
      <h2 class="text-3xl md:text-4xl text-amber-900 pb-4 md:pb-8"
        data-aos="fade-zoom-in"
        data-aos-delay="100"
        data-aos-duration="800">
        ¿ Por qué elegirnos ?
      </h2>
    </div>
    
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 mb-20">
        {cardsData.map((card) => (
          <div 
            id={card.id}
            class="relative" 
            data-aos={card.animation} 
            data-aos-delay={card.delay}
          >
            <div class="bg-gradient-to-tr from-black/35 to-slate-900 rounded-3xl p-5 md:p-6 h-full flex flex-col min-h-[350px] md:min-h-[400px]">
              {/* Card Number Badge */}
              <div class="absolute -top-4 -right-4 w-8 h-8 bg-gradient-to-r from-amber-500 to-orange-500 rounded-full flex items-center justify-center text-white font-bold text-lg shrink-0">
                {card.id}
              </div>

              {/* Header Section */}
              <div class="flex flex-col items-center justify-center text-center mb-6 shrink-0">
                <div class="w-16 h-16 text-amber-400 p-1 bg-gradient-to-br from-amber-500/20 to-orange-600/20 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-105 transition-transform duration-300">
                  <card.iconComponent />
                </div>
                <h3 class="text-xl md:text-2xl text-amber-100 mb-3 tracking-wider">
                  {card.title}
                </h3>
              </div>

              {/* Content Section */}
              <div class="flex-grow flex flex-col justify-between min-h-0">
                <p 
                  class="text-slate-300 font-light text-justify text-lg md:text-xl mb-4 md:mb-6 leading-relaxed flex-grow"
                  set:html={card.description}
                >
                </p>

                {/* Footer Section */}
                <div class="flex items-center justify-center text-amber-400 text-lg md:text-xl h-8 shrink-0">
                  <div class="w-2 h-2 bg-amber-400 rounded-full mr-2 animate-pulse"></div>
                  {card.footer}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>