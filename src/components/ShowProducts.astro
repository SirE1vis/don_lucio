---
const mainProducts = {
  webp: `${import.meta.env.BASE_URL}images/productos.webp`,
  png: `${import.meta.env.BASE_URL}images/productos.png`,
  alt: "Variedad de quesos y yogurts artesanales de Don Sa Saa",
}

---
<section class="text-black antialiased  overflow-hidden">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-2 items-center gap-x-5 p-8">
    <!-- Header Principal -->
    <div
      class="w-full mx-auto h-[85%] flex flex-col items-center justify-center shadow-xl m-10 rounded-2xl"
      data-aos="fade-down"
      data-aos-duration="1000"
    >
      <h2 class="text-4xl md:text-5xl tracking-wide mb-8 text-center bg-amber-500 p-8 rounded-2xl shadow-2xl">
        <span class="text-center text-transparent bg-clip-text bg-gradient-to-r from-amber-800 via-orange-600 to-black/85 text-wrap">
          Queso y Yogurt 
          <pre></pre>
          Don Sa Saa
        </span>
      </h2>
      <div class="w-full text-center inline-flex items-center justify-center p-2 rounded-full mb-6">
        <span class="text-center p-4 rounded-2xl text-orange-800 font-bold text-xl md:text-2xl shadow-xl">
          Huanchaca - Santiago de Anchucaya
        </span>
      </div>
    </div>

    <!-- Imagen Principal -->
    <div
      class="h-[85%]"
      data-aos="zoom-in"
      data-aos-duration="1000"
      data-aos-delay="200"
    >
      <img
        src={mainProducts.webp}
        alt={mainProducts.alt}
        class="mx-auto w-full h-full max-w-4xl rounded-2xl object-cover shadow-2xl shadow-amber-500/10"
        loading="lazy"
        onerror={`this.onerror=null; this.src='${mainProducts.png}';`}
      />
    </div>
  </div>
</section>
