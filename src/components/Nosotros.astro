---
const base = import.meta.env.BASE_URL;
const backgroundImage = {
  webp: `${base}images/bg-nosotros.webp`,
  png: `${base}images/bg-nosotros.png`,
  alt: "Nosotros",
};
---


<!-- Hero Section -->
<section
  class="relative w-full min-h-[75vh] lg:min-h-[85vh] flex items-center justify-center overflow-hidden"
>
  <!-- Background Image Container -->
  <div class="absolute inset-0 w-full h-full">
    <div class="block w-full h-full">
      <img
        src={backgroundImage.webp}
        alt={backgroundImage.alt}
        class="w-full h-full object-cover object-center filter brightness-90 contrast-110"
        loading="lazy"
        onerror={`this.onerror=null; this.src='${backgroundImage.png}';`}
      />
    </div>

    <!-- Enhanced Multi-layer Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/85 via-slate-800/70 to-slate-900/80"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/20 to-black/40"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-amber-900/15 via-transparent to-transparent"></div>
  </div>

  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Geometric patterns -->
    <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-amber-400/20 rounded-full animate-pulse"></div>
    <div class="absolute top-3/4 right-1/3 w-1 h-1 bg-amber-300/30 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-1/4 left-1/2 w-1.5 h-1.5 bg-amber-500/15 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
    
    <!-- Subtle corner elements -->
    <div class="absolute top-8 left-8 w-12 h-12 border-l-2 border-t-2 border-amber-400/20 rounded-tl-lg"></div>
    <div class="absolute top-8 right-8 w-12 h-12 border-r-2 border-t-2 border-amber-400/20 rounded-tr-lg"></div>
    <div class="absolute bottom-8 left-8 w-12 h-12 border-l-2 border-b-2 border-amber-400/20 rounded-bl-lg"></div>
    <div class="absolute bottom-8 right-8 w-12 h-12 border-r-2 border-b-2 border-amber-400/20 rounded-br-lg"></div>
  </div>

  <!-- Main Content Container -->
  <div class="relative z-20 flex flex-col items-center justify-center text-center px-4 py-8">
    
    <!-- Decorative Top Border -->
    <div 
      class="mb-8 lg:mb-12"
      data-aos="fade-down" 
      data-aos-duration="800"
    >
      <div class="flex items-center justify-center gap-4">
        <div class="w-16 lg:w-24 h-0.5 bg-gradient-to-r from-transparent via-amber-400 to-amber-300"></div>
        <div class="w-3 h-3 bg-amber-400 rounded-full transform rotate-45"></div>
        <div class="w-3 h-3 bg-amber-500 rounded-full"></div>
        <div class="w-3 h-3 bg-amber-400 rounded-full transform rotate-45"></div>
        <div class="w-16 lg:w-24 h-0.5 bg-gradient-to-r from-amber-300 via-amber-400 to-transparent"></div>
      </div>
    </div>

    <!-- Main Title Container -->
    <div 
      class="relative group"
      data-aos="zoom-in" 
      data-aos-duration="1000"
      data-aos-delay="300"
    >
      <!-- Background card with sophisticated styling -->
      <div class="relative bg-gradient-to-br from-slate-800/35 via-slate-700/40 to-slate-800/20  rounded-3xl shadow-2xl p-8 lg:p-12">
        
        <!-- Inner glow effect -->
        <div class="absolute inset-0 bg-gradient-to-br from-amber-500/10 via-transparent to-amber-600/15 rounded-3xl"></div>
        
        <!-- Title with individual letter animations -->
        <h1 class="relative z-10 flex items-center justify-center gap-2 sm:gap-3 md:gap-4 lg:gap-6 text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold tracking-wider">
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="400" data-aos-duration="600">N</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="500" data-aos-duration="600">O</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="600" data-aos-duration="600">S</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="700" data-aos-duration="600">O</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="800" data-aos-duration="600">T</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="900" data-aos-duration="600">R</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="1000" data-aos-duration="600">O</span>
          <span class="letter-animation text-transparent bg-clip-text bg-gradient-to-b from-white via-slate-100 to-slate-300 drop-shadow-lg" data-aos="fade-right" data-aos-delay="1100" data-aos-duration="600">S</span>
        </h1>

        <!-- Decorative underline -->
        <div 
          class="mt-6 lg:mt-8 flex justify-center"
          data-aos="fade-up" 
          data-aos-delay="1200" 
          data-aos-duration="800"
        >
          <div class="w-32 lg:w-48 h-1 bg-gradient-to-r from-amber-500 via-amber-400 to-amber-500 rounded-full shadow-lg"></div>
        </div>
      </div>

      <!-- Floating accent elements -->
      <div class="absolute -top-4 -left-4 w-8 h-8 bg-gradient-to-br from-amber-400/30 to-amber-500/20 rounded-full blur-sm"></div>
      <div class="absolute -bottom-4 -right-4 w-6 h-6 bg-gradient-to-br from-amber-500/20 to-amber-600/10 rounded-full blur-sm"></div>
    </div>

    <!-- Subtitle -->
    <div 
      class="mt-8 lg:mt-12 max-w-2xl mx-auto"
      data-aos="fade-up" 
      data-aos-delay="8 00" 
      data-aos-duration="800"
    >
      <p class="text-lg lg:text-xl text-slate-200 font-medium leading-relaxed tracking-wide">
        Conoce nuestra historia, valores y el compromiso que nos define
      </p>
    </div>

    <!-- Decorative Bottom Border -->
    <div 
      class="mt-8 lg:mt-12"
      data-aos="fade-up" 
      data-aos-delay="1600" 
      data-aos-duration="800"
    >
      <div class="flex items-center justify-center gap-2">
        <div class="w-2 h-2 bg-amber-400/60 rounded-full"></div>
        <div class="w-8 h-0.5 bg-gradient-to-r from-amber-400/60 to-amber-500/40"></div>
        <div class="w-3 h-3 bg-amber-500/80 rounded-full"></div>
        <div class="w-8 h-0.5 bg-gradient-to-r from-amber-500/40 to-amber-400/60"></div>
        <div class="w-2 h-2 bg-amber-400/60 rounded-full"></div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div 
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20"
    data-aos="fade-up" 
    data-aos-delay="1000" 
    data-aos-duration="800"
  >
    <div class="flex flex-col items-center gap-2 text-slate-300">
      <div class="w-6 h-10 border-2 border-slate-400/50 rounded-full flex justify-center">
        <div class="w-1 h-3 bg-amber-400 rounded-full mt-2 animate-bounce"></div>
      </div>
      <span class="text-base font-medium tracking-wider">SCROLL</span>
    </div>
  </div>
</section>

<style>
  .letter-animation {
    display: inline-block;
    font-weight: 900;
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    position: relative;
  }

  /* Custom animations */
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  /* Image optimizations */
  img {
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
  }

  /* Print styles */
  @media print {

    .text-transparent {
      color: #ffffff !important;
      background: none !important;
    }
    
    .shadow-2xl, .shadow-lg {
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1) !important;
    }
  }

  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
    
    .animate-pulse, .animate-bounce {
      animation: none !important;
    }
  }


  /* Mobile optimizations */
  @media (max-width: 640px) {
    .tracking-wider {
      letter-spacing: 0.1em;
    }
    
    .min-h-[75vh] {
      min-height: 70vh;
    }
  }
</style>