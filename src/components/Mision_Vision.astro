---
import MisionIcon from './icons/Mision.astro'
import VisionIcon from './icons/Vision.astro'
import ValoresIcon from './icons/Valores.astro'

const items = [
  {
    title: "MISIÓN",
    text: "Producir quesos artesanales de alta calidad, preservando las tradiciones y sabores auténticos de nuestra región.",
    Icon: MisionIcon,
    color: "from-red-500 to-orange-500"
  },
  {
    title: "VISIÓN",
    text: "Ser referentes en la producción de quesos artesanales, innovando y manteniendo la excelencia en cada producto.",
    Icon: VisionIcon,
    color: "from-cyan-500 to-teal-500"
  },
  {
    title: "VALORES",
    text: "Calidad, tradición, compromiso y responsabilidad social guían nuestro trabajo diario.",
    Icon: ValoresIcon,
    color: "from-amber-500 to-yellow-500"
  }
];
---

<section class="w-full py-16">
  {/* Main container - 75% width */}
  <div class="w-[75%] mx-auto">
    {/* Circles container */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-6 lg:gap-8">
      {
        items.map(({ title, text, Icon, color }) => (
          <div class="relative aspect-square">
            {/* Circle with solid gradient background */}
            <div class={`absolute inset-0 rounded-full bg-gradient-to-br ${color}`}>
              {/* Background Icon with 50% opacity */}
              <div class="absolute inset-0 flex items-center justify-center opacity-10">
                <Icon class="w-3/4 h-3/4" />
              </div>
            </div>

            {/* Content Container */}
            <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center">
              <h3 class="text-xl md:text-2xl font-bold text-white mb-3 drop-shadow-md">
                {title}
              </h3>
              <p class="text-sm md:text-base text-white leading-tight max-w-[80%] drop-shadow-md">
                {text}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .grid {
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }
</style>