---
import ContactFormComponent from '@/components/Formulario.tsx';

const formulario = {
  image: {
    png: `${import.meta.env.BASE_URL}images/formulario.png`,
    webp: `${import.meta.env.BASE_URL}images/formulario.webp`,
    alt: "formulario",
  },
};
---

<section class="min-h-screen w-full py-16 px-4 sm:px-8 md:px-16 lg:px-6">
  <div class="max-w-7xl w-full mx-auto">
    <div class="overflow-hidden">
      <div class="flex flex-col lg:flex-row gap-8 lg:gap-12">
        <!-- Formulario - 50% -->
        <div class="w-full lg:w-[45%] p-8 lg:p-12 rounded-2xl shadow-2xl border-2 border-black/15 flex items-center justify-center">
          <div class="w-full">
            <h2 class="text-2xl md:text-3xl text-amber-700/75 mb-2 text-center">Contáctanos</h2>
            <p class="text-gray-600 mb-8 text-center">Nos encantaría saber de ti. Envíanos un mensaje y te responderemos pronto.</p>
            
            <div id="contact-form-container">
                <ContactFormComponent client:load />
            </div>
          </div>
        </div>
        
        <!-- Imagen - 50% -->
        <div class="w-full lg:w-[60%] h-[400px] md:min-h-[400px] lg:min-h-[600px] relative rounded-2xl overflow-hidden bg-green-300">
          <img
              src={formulario.image.webp}
              alt={formulario.image.alt}
              class="w-full h-full object-cover"
              loading="lazy"
              onerror={`this.onerror=null; this.src='${formulario.image.png}';`}
            />
        </div>
      </div>
    </div>
  </div>
</section>