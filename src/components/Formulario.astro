---
import ContactFormComponent from '@/components/Formulario.tsx';
---

<section class="min-h-screen w-full py-16 px-4">
  <div class="max-w-6xl w-full mx-auto">
    <div class="overflow-hidden">
      <div class="grid lg:grid-cols-2 gap-24">
        <!-- Formulario -->
        <div class="p-8 lg:p-12 rounded-2xl shadow-2xl border-2 border-black/15">
          <div class="max-w-md mx-auto">
            <h2 class="text-2xl md:text-3xl text-amber-700/75 mb-2 text-center">Contáctanos</h2>
            <p class="text-gray-600 mb-8 text-center">Nos encantaría saber de ti. Envíanos un mensaje y te responderemos pronto.</p>
            
            <div id="contact-form-container">
                <ContactFormComponent client:load />
            </div>
          </div>
        </div>
        
        <div class="relative bg-gradient-to-br from-blue-600/35 to-purple-700/50 lg:min-h-[600px] flex items-center justify-center">
          <div class="absolute inset-0 bg-black bg-opacity-20"></div>
          <div class="relative z-10 text-center text-black/50 p-8">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
