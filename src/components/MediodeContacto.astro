---
import PhoneIcon from '@/components/icons/Phone.astro'
import LocationIcon from '@/components/icons/Location.astro'
import EmailIcon from '@/components/icons/Email.astro'
---

<section class="w-full flex justify-center pt-24 pb-20">
  <div class="w-full container mx-auto px-4">
    {/* Header Section */}
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl  text-amber-900 mb-8">
        Pongámonos en contacto
      </h2>
      <p class="text-gray-600 text-lg md:text-xl max-w-2xl mx-auto">
        Estamos aquí para responder tus preguntas y ayudarte en lo que necesites
      </p>
    </div>

    {/* Contact Cards Container */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {/* Phone Card */}
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex flex-col items-center text-center">
          <div class="w-14 h-14 bg-amber-600 rounded-full flex items-center justify-center mb-4">
            <PhoneIcon class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-lg md:text-xl text-amber-900 mb-2">
            Llámanos
          </h3>
          <p class="text-black/75 text-base mb-2">
            Celular
          </p>
          <span class="text-amber-900 font-semibold text-base ">
            9983 3435 232
          </span>
        </div>
      </div>

      {/* Location Card */}
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex flex-col items-center text-center">
          <div class="w-14 h-14 bg-amber-600 rounded-full flex items-center justify-center mb-4">
            <LocationIcon class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-base md:text-xl text-amber-900 mb-2">
            Visítanos
          </h3>
          <p class="text-black/85 mb-2">
            Ubicación
          </p>
          <address class="text-amber-900 text-base font-semibold not-italic">
            123 Business Avenue, Lima, Perú
          </address>
        </div>
      </div>

      {/* Email Card */}
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex flex-col items-center text-center">
          <div class="w-14 h-14 bg-amber-600 rounded-full flex items-center justify-center mb-4">
            <EmailIcon class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-lg md:text-xl text-amber-900 mb-2">
            Escríbenos
          </h3>
          <p class="text-black/75 text-base mb-2">
            Email
          </p>
          <span class="text-amber-900 px-3 text-wrap font-semibold text-base">
            saavedra@gmail.com
          </span>
        </div>
      </div>
    </div>
  </div>
</section>