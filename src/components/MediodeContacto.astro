---
import PhoneIcon from '@/components/icons/Phone.astro'
import LocationIcon from '@/components/icons/Location.astro'
import EmailIcon from '@/components/icons/Email.astro'
---

<section class="w-full flex justify-center pb-8 pt-[150px]">
  <div class="w-full container mx-auto px-4">
    {/* Header Section */}
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-amber-900 mb-4">
        Pongámonos en contacto
      </h2>
      <p class="text-gray-600 md:text-lg max-w-2xl mx-auto">
        Estamos aquí para responder tus preguntas y ayudarte en lo que necesites
      </p>
    </div>

    {/* Contact Cards Container */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {/* Phone Card */}
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex flex-col items-center text-center">
          <div class="w-16 h-16 bg-amber-800 rounded-full flex items-center justify-center mb-4">
            <PhoneIcon class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold text-amber-900 mb-2">
            Llámanos
          </h3>
          <p class="text-gray-600 mb-2">
            Oficina Principal
          </p>
          <a href="tel:+51234567890" class="text-amber-900 hover:text-amber-700 font-medium">
            +1 (234) 567-8901
          </a>
        </div>
      </div>

      {/* Location Card */}
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex flex-col items-center text-center">
          <div class="w-16 h-16 bg-amber-800 rounded-full flex items-center justify-center mb-4">
            <LocationIcon class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold text-amber-900 mb-2">
            Visítanos
          </h3>
          <p class="text-gray-600 mb-2">
            Ubicación
          </p>
          <address class="text-amber-900 not-italic">
            123 Business Avenue, Lima, Perú
          </address>
        </div>
      </div>

      {/* Email Card */}
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow">
        <div class="flex flex-col items-center text-center">
          <div class="w-16 h-16 bg-amber-800 rounded-full flex items-center justify-center mb-4">
            <EmailIcon class="w-8 h-8 text-white" />
          </div>
          <h3 class="text-xl font-bold text-amber-900 mb-2">
            Escríbenos
          </h3>
          <p class="text-gray-600 mb-2">
            Email
          </p>
          <a href="mailto:contacto@kypbioingenieria.com" class="text-amber-900 hover:text-amber-700 font-medium break-all">
            contacto@kypbioingenieria.com
          </a>
        </div>
      </div>
    </div>
  </div>
</section>